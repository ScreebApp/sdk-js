{
  "name": "root",
  "private": true,
  "scripts": {
    "lint": "lerna run --parallel lint",
    "lint:fix": "lerna run --parallel lint -- --fix",
    "lint:commit": "commitlint --verbose --edit",
    "build": "lerna run build",
    "build:watch": "lerna run --parallel build -- --watch",
    "prepare": "lerna bootstrap && npm run build && husky install",
    "pretest": "npm run lint",
    "test": "lerna run --parallel test",
    "docs": "node ./scripts/generate-readmes",
    "clean": "lerna clean --yes && lerna run clean && rm -Rf node_modules",
    "upgrade:all": "npm-upgrade && lerna exec --concurrency 1 npm-upgrade",
    "preversion": "npm run clean && npm lint && npm build && npm test && npm run build:doc",
    "version": "lerna version",
    "postversion": "git push && git push --tags",
    "prepublishOnly": "npm run version",
    "publish": "lerna publish --no-private"
  },
  "dependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@tsconfig/svelte": "^4.0.1",
    "husky": "^8.0.3",
    "lerna": "^6.6.1",
    "svelte-check": "^3.3.0",
    "svelte-preprocess": "^5.0.3",
    "typescript": "^5.0.4"
  }
}